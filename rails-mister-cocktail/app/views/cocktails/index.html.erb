<div class="index-content">
  <div class="container">
    <div class="main">
      <section>
        <div class="default-banner">
          <div class="title">
            <h1>
              <span id="banner-typed-text"></span>
            </h1>
          </div>
        </div>
        <div class="down-arrow">
          <div class="down-arrow-element">
            <a href="#section2"><i class="fas fa-arrow-down"></i></a>
          </div>
        </div>
      </section>
    </div>
    <div class="main" id="section2">
      <section>
        <form action="/cocktails" method="get">
          <input type="text" name="name" class="form-control form-control-plaintext search" placeholder="Search">
        </form>
        <div class="list-container">
          <% @cocktails.each do |cocktail| %>
            <h3>
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </h3>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>
